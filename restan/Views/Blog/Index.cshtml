@using restan.ViewModels
@model HomeVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Blog";
}

<!-- Start Breadcrumb
    ============================================= -->
<div class="breadcrumb-area bg-cover shadow dark text-center text-light" style="background-image: url('@Url.Content("~/img/2440x1578.jpg")');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h1>About Us</h1>
                <ul class="breadcrumb">
                    <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                    <li>Blog</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
<!-- Start Blog
    ============================================= -->
<div class="blog-area full-blog blog-standard default-padding">
    <div class="container">
        <div class="row">
            <div class="blog-content col-xl-10 offset-xl-1 col-md-12">
                
                    @foreach(var item in Model.Posts)
                    {
                    <div class="blog-item-box">
                        <!-- Single Item -->
                        <div class="item">
                            <div class="thumb">
                                <a href="#"><img src="assets/img/1500x700.png" alt="Thumb"></a>
                            </div>
                            <div class="info">
                                <div class="meta">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="far fa-calendar-alt"></i>@item.CreatedDate</a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="far fa-user-circle"></i> Admin</a>
                                        </li>
                                    </ul>
                                </div>
                                <h2><a href="#">@item.Title</a></h2>
                                <p>
                                    @item.Body
                                </p>
                            </div>
                        </div>
                        <!-- Single Item -->
                    </div>
                    }
                

                <!-- Pagination -->
                <div class="row">
                    <div class="col-md-12 pagi-area text-center">
                        <nav aria-label="navigation">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-left"></i></a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-right"></i></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Blog -->
