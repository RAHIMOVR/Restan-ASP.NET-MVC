@using restan.Data
@model restan.Models.Reservation
@{
    ViewData["Title"] = "Reservation";
}
<!-- Start Breadcrumb -->
<div class="breadcrumb-area bg-cover shadow dark text-center text-light" style="background-image: url('@Url.Content("~/img/2440x1578.jpg")');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h1>Online Reservation</h1>
                <ul class="breadcrumb">
                    <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                    <li>Reservation</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
<!-- Start Reservation -->
<div class="reservation-area default-padding overflow-hidden">
    <div class="container">
        <div class="opening-hour-items">
            <h2 class="text-fixed">Restan</h2>
            <div class="shape">
                <img src="~/img/shape/4.png" alt="Image Not Found">
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-5">
                    <div class="opening-hours-thumb video-bg-live">
                        <img src="~/img/800x800.png" alt="Image Not Found">
                        <div class="player" data-property="{videoURL:'0Fs-4GiNxQ8',containment:'.video-bg-live', showControls:false, autoPlay:true, zoom:0, loop:true, mute:true, startAt:654, opacity:1, quality:'default'}"></div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <div class="opening-hours-info">
                        <div class="reservation-form">
                            <h2 class="title mb-30">Book A Table</h2>
                            <form asp-action="Create" method="post">
                                <!-- Phone Number -->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="Pnumber">Phone</label>
                                            <input class="form-control" id="Pnumber" asp-for="Pnumber" name="Pnumber" placeholder="+4733378901" type="text" required>
                                        </div>
                                    </div>
                                </div>

                                <!-- Number of People -->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="Person">Person</label>
                                            <select id="Person" name="Person" asp-for="Person" required>
                                                <option value="1">1 Person</option>
                                                <option value="2">2 People</option>
                                                <option value="3">3 People</option>
                                                <option value="4">4 People</option>
                                                <option value="5">5 People</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Reservation Date -->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="input-group date date-picker-one">
                                            <label for="date">Date</label>
                                            <input type="text" class="form-control" asp-for="Reservdate" id="date" placeholder="Date">
                                            <span class="input-group-addon"><i class="fas fa-calendar-alt"></i></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Time -->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="Time">Time</label>
                                            <select id="Time" name="Time" required asp-for="Time">
                                                <option value="16:00">4:00 PM</option>
                                                <option value="17:00">5:00 PM</option>
                                                <option value="18:00">6:00 PM</option>
                                                <option value="19:00">7:00 PM</option>
                                                <option value="20:00">8:00 PM</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <button type="submit" class="btn btn-primary">
                                            Book A Table
                                        </button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Reservation -->
